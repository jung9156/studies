		"ccbaAsno": "18310000",
		"ccbaCncl": "N",
		"ccbaCpno": "1123718310000",
		"longitude": "128.377172761855",
		"latitude": "36.4901868829312",
		"gcodeName": "유적건조물",
		"bcodeName": "종교신앙",
		"mcodeName": "불교",
