		"ccbaMnm2": "康津 高麗靑瓷 窯址",
		"ccbaCtcdNm": "전남",
		"ccsiName": "강진군",
		"ccbaAdmin": "\n               강진군\n\t\t",
		"ccbaKdcd": "13",
