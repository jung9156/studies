		"ccbaAdmin": "\n               남＊＊＊\n\t\t",
		"ccbaKdcd": "12",
		"ccbaCtcd": "34",
		"ccbaAsno": "18150000",
		"ccbaCncl": "N",
		"ccbaCpno": "1123418150000",
		"longitude": "0",
