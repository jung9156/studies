		"ccbaMnm2": "求禮 泉隱寺 金銅佛龕",
		"ccbaCtcdNm": "전남",
		"ccsiName": "구례군",
		"ccbaAdmin": "\n               천＊＊＊\n\t\t",
		"ccbaKdcd": "12",
